{
  "name": "misinformation-detector",
  "version": "1.0.0",
  "description": "Chrome extension for flagging and detecting misinformation",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^27.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!generate-icons.py"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
